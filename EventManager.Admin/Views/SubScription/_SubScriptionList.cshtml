@model List<MasterHost.DataModel.Models.Subscription>


@section Styles {
    @Styles.Render("~/bundles/datatables/css")
}

@section Scripts {
    @Scripts.Render("~/bundles/datatables/js")
    @Scripts.Render("~/bundles/datatablesBootstrap/js")
    @Scripts.Render("~/bundles/datatablesPlugins/js")
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#add').on('click', function () {
            window.location.href = "Create";
        });
    });
</script>


<div class="hpanel">
    <div class="panel-heading">
        <div class="panel-tools">
            @*<a class="showhide"><i class="fa fa-chevron-up"></i></a>
                <a class="closebox"><i class="fa fa-times"></i></a>*@

        </div>
        My Account(s)
    </div>
    <div class="hpanel">
        <div class="panel-heading">
            <div class="panel-tools">
                <a class="showhide"><i class="fa fa-chevron-up"></i></a>
                @*<a class="closebox"><i class="fa fa-times"></i></a>*@
            </div>
            Toolbar
        </div>
        <div class="panel-body float-e-margins">
            <a href="~/Product/List" class="btn btn-primary" id="add"><i class="fa fa-plus"></i> <br />Add</a>
        </div>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table id="example2" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th></th>                        
                        <th></th>
                        <th>Code</th>  
                        <th>Service</th> 
                        <th>Service name</th>                    
                        <th>Account</th>
                        <th>Subscription Type</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Purchase date</th>
                    </tr>
                </thead>
                <tbody>

                    @for (int j = 0; j < Model.Count; j++)
                    {
                        <tr>
                            <td><a href="~/SubScription/Delete/@Model[j].SubscriptionId"><i class="fa pe-7s-trash"></i> </a></td>
                            <td><a href="~/ServiceAccount/Edit/"><i class="fa fa-edit"></i></a></td>
                            <td>@Model[j].SubscriptionCode</td>
                            <td>@Model[j].Service.Name</td>
                            <td>@Model[j].Service.Remark</td>                            
                            <td>@Model[j].Tentant.Name</td>
                            <td>@Resources.Resource.ResourceManager.GetString(Model[j].SubscriptionType)</td>
                            <td>@Model[j].Price</td>
                            <td>@Resources.Resource.ResourceManager.GetString(Model[j].ActiveYN)</td>
                            <td>@Model[j].PurchaseDateFormatted</td>
                            
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

